#!/usr/bin/env bash

# START CONFIGURATION
DOLLAR='$'
export VCW_STACK_GLOBAL_STACKS="vcwc/bash/rest"
export VCW_STACK_GLOBAL_STACKNAMES="vcw_stack_bash_rest"
export VCW_STACK_GLOBAL_BOOTSTACKS="vcw_stack_bash_rest"
export VCW_STACK_GLOBAL_RUNSTACKS="vcw_stack_bash_rest"
export VCW_STACK_GLOBAL_VOLUME_LIST="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_bash_rest_data_volume"
# END CONFIGURATION

# START GLOBAL SETTINGS
export VCW_STACK_GLOBAL='\
$VCW_STACK_GLOBAL_SERVICE_NAME,\
$VCW_STACK_GLOBAL_IMAGE_NAME,\
$VCW_STACK_BASH_REST_PORTS,\
$VCW_STACK_BASH_REST_NETWORKS,\
$VCW_STACK_BASH_REST_VOLUMES,\
$VCW_STACK_GLOBAL_VOLUMES,\
$VCW_STACK_GLOBAL_NETWORKS,\
$VCW_STACK_BASH_REST_COMPOSE_EXTENSIONS'
export VCW_STACK_GLOBAL_SERVICE_NAME="bash_rest"
export VCW_STACK_GLOBAL_IMAGE_NAME="vcwc/bash/base"
export VCW_STACK_BASH_REST_PORTS=
export VCW_STACK_BASH_REST_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay"
export VCW_STACK_BASH_REST_VOLUMES="'${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_bash_data_volume:/vcw/pwd'${DOLLAR}{VCW_STACK_BASH_REST_VOLUMES_MAPPINGS}"
export VCW_STACK_GLOBAL_VOLUMES="${DOLLAR}{VCW_STACK_GLOBAL_STACKPREFIX}_bash_data_volume: { external: true }"
export VCW_STACK_GLOBAL_NETWORKS="${DOLLAR}{VCW_STACK_GLOBAL_NETWORKLOCAL}_overlay: { external: true }"
export VCW_STACK_BASH_REST_COMPOSE_EXTENSIONS="      restart_policy: { condition: none }
${DOLLAR}{VCW_STACK_BASH_REST_COMPOSE_EXTENSIONS}"
# END GLOBAL SETTINGS

# START SETTINGS artifactory.base
export VCW_STACK_BASH_REST_ENVIRONMENT_REST_BASE_CURL_LOGGING="REQUEST RESPONSE TRACE"
export VCW_STACK_BASH_REST_COMMAND="'.invoke execute-curl /conteco/pwd/test.request /conteco/pwd/test.response http 80'"
export VCW_STACK_BASH_REST_COMMAND_INTERACTIVE="true"
export VCW_STACK_BASH_REST_ENVIRONMENT="'VCW_STACK_STATIC_REST_BASE_API_LOGGING=${VCW_STACK_BASH_REST_ENVIRONMENT_REST_BASE_CURL_LOGGING}'"
export VCW_STACK_BASH_REST_VOLUMES_MAPPINGS=""
export VCW_STACK_BASH_REST_DEPLOY_MODE="replicated"
export VCW_STACK_BASH_REST_DEPLOY_RESOURCES_LIMITS_MEMORY="24m"
export VCW_STACK_BASH_REST_DEPLOY_RESOURCES_RESERVATIONS_MEMORY="5m"
# END SETTINGS artifactory.base

# START TOPLEVEL SETTINGS
# END TOPLEVEL SETTINGS
